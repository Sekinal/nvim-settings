# Document Setup
snippet setup "Basic document setup" b
\documentclass[11pt]{article}
\usepackage[utf8]{inputenc}
\usepackage[T1]{fontenc}
\usepackage{textcomp}
\usepackage[english]{babel}
\usepackage{amsmath, amssymb}
\usepackage{graphicx}
\usepackage[colorlinks=true, allcolors=blue]{hyperref}

\title{${1:Title}}
\author{${2:Author}}
\date{${3:\today}}

\begin{document} \maketitle $0 \end{document}
endsnippet

# Sections
snippet s "Section" b
\section{${1:Section name}}
$0
endsnippet

snippet ss "Subsection" b
\subsection{${1:Subsection name}}
$0
endsnippet

snippet sss "Subsubsection" b
\subsubsection{${1:Subsubsection name}}
$0
endsnippet

# Math environments
snippet beg "begin{} / end{}" bA
\begin{$1}
    $0
\end{$1}
endsnippet

snippet mk "Inline Math" wA
$${1}$${0}
endsnippet

snippet dm "Display Math" wA
\[ ${1} \] $0
endsnippet

snippet '([A-Za-z])(\d)' "auto subscript" wrA
`!p snip.rv = match.group(1)`_`!p snip.rv = match.group(2)`
endsnippet

snippet '([A-Za-z])_(\d\d)' "auto subscript2" wrA
`!p snip.rv = match.group(1)`_{`!p snip.rv = match.group(2)`}
endsnippet

# Fraction
snippet // "Fraction" iA
\\frac{$1}{$2}$0
endsnippet

# Fonts
snippet bf "Bold" w
\textbf{$1}$0
endsnippet

snippet it "Italic" w
\textit{$1}$0
endsnippet

snippet un "Underline" w
\underline{$1}$0
endsnippet

# Lists
snippet enum "Enumerate" bA
\begin{enumerate} \item $0 \end{enumerate}
endsnippet

snippet item "Itemize" bA
\begin{itemize} \item $0 \end{itemize}
endsnippet

snippet desc "Description" b
\begin{description} \item[$1] $0 \end{description}
endsnippet

# Tables
snippet tab "Table" b
\begin{table}[${1:htpb}] \centering \caption{${2:caption}} \label{tab:${3:label}} \begin{tabular}{${4:c}} $0 \end{tabular}
\end{table}
endsnippet

# Figures
snippet fig "Figure" b
\begin{figure}[${1:htpb}] \centering \includegraphics[width=${2:0.8}\linewidth]{${3:name.ext}} \caption{${4:caption}} \label{fig:${5:label}} \end{figure}
endsnippet

# Equations
snippet eq "Equation" b
\begin{equation} $1 \end{equation}
endsnippet

snippet eql "Equation with Label" b
\begin{equation} $1 \label{eq:${2:label}} \end{equation}
endsnippet

# Theorems, Lemmas, etc.
snippet thm "Theorem" b
\begin{theorem}[$1] $0 \end{theorem}
endsnippet

snippet lem "Lemma" b
\begin{lemma}[$1] $0 \end{lemma}
endsnippet

snippet prf "Proof" b
\begin{proof} $0 \end{proof}
endsnippet

# Quick symbols
snippet ... "ldots" iA
\ldots
endsnippet

snippet <= "leq" iA
\leq
endsnippet

snippet >= "geq" iA
\geq
endsnippet

snippet != "neq" iA
\neq
endsnippet

snippet ~~ "approx" iA
\approx
endsnippet

snippet -> "to" iA
\to
endsnippet

# Greek letters
snippet @a "alpha" iA
\alpha
endsnippet

snippet @b "beta" iA
\beta
endsnippet

snippet @g "gamma" iA
\gamma
endsnippet

# Common math functions
snippet sum "sum" w
\sum_{${1:i=1}}^{${2:\infty}} ${3}
endsnippet

snippet int "integral" w
\int_{${1:-\infty}}^{${2:\infty}} ${3}
endsnippet

snippet lim "limit" w
\lim_{${1:n} \to ${2:\infty}} 
endsnippet

# Brackets
snippet lr( "left( right)" iA
\left( ${1} \right)$0
endsnippet

snippet lr[ "left[ right]" iA
\left[ ${1} \right]$0
endsnippet

snippet lr{ "left{ right}" iA
\left\\{ ${1} \right\\}$0
endsnippet

# References
snippet ref "Reference" w
~\ref{${1:label}}
endsnippet

snippet eqref "Equation Reference" w
Eq.~\eqref{${1:label}}
endsnippet

# Citations
snippet cite "Cite" w
\cite{${1:label}}
endsnippet

